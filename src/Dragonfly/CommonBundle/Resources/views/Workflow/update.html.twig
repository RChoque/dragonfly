{% extends "DragonflyCommonBundle::page.html.twig" %}

{% if workflow is defined %}
    {% set url = path('dragonfly_common_workflow_update', {id: workflow.id}) %}
    {% set title = 'Modification du workflow ' ~ workflow.name %}
{% else %}
    {% set url = path('dragonfly_common_workflow_new') %}
    {% set title = 'Cr√©ation d\'un workflow' %}
{% endif %}

{% block page_title %}{{ parent() }} - {{ title }}{% endblock %}

{% block content %}
    <div class="container">
        {% form_theme form 'DragonflyCommonBundle:Form:dragonfly_form_layout.html.twig' %}

        <h1>{{ title }}</h1>
        
        {{ form_start(form, {'action': url , 'method': 'post'}) }}
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <a href="{{ path('dragonfly_common_workflow_list') }}" class="btn btn-danger" role="button"><i class="fa fa-ban"></i> {{ "form.label.cancel"|trans }}</a>
                <button type="submit" value="save" name="save" class="btn btn-success"><i class="fa fa-floppy-o"></i> {{ "form.label.save"|trans }}</button>                
            </div>
        </div>
        {{ form_end(form) }}
        {# form_javascript(form) #}
    </div> 
{% endblock %}